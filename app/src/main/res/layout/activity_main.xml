<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools                 = "http://schemas.android.com/tools"
    android:layout_width        = "match_parent"
    android:layout_height       = "match_parent"
    android:orientation         = "vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name:"
            android:textColor="#110"
            android:textSize="12sp" />


        <AutoCompleteTextView
            android:id="@+id/et_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Israel"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#110"
            android:textSize="12sp"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:ems            = "10"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name:"
            android:textColor="#110"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/et_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:hint="Israeli"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textColor="#110"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/et_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Jerusalem"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Average shopping price:"
            android:textColor="#110"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/et_avg_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="250"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="National ID number:"
            android:textColor="#110"
            android:textSize="12sp" />

        <AutoCompleteTextView
            android:id="@+id/et_national_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="123456789"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add"
                android:layout_width="47dp"
                android:layout_height="32dp"
                android:onClick="add"
                android:text="ADD"
                android:textSize="10sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_view"
                android:layout_width="69dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:onClick="all"
                android:text="VIEW ALL"
                android:textSize="10sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_uppdate"
                android:layout_width="62dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:onClick="update"
                android:text="UPDATE"
                android:textSize="10sp"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="63dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:onClick="delete"
                android:text="DELETE"
                android:textSize="10sp"
                tools:ignore="OnClick" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id= "@+id/btn_find_customer"
                android:layout_width="47dp"
                android:layout_height="32dp"
                android:text="FIND"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/btn_avg"
                android:layout_width="76dp"
                android:layout_height="32dp"
                android:text="UNTIL AVG"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>